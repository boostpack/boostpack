{
  "name": "@boostpack/joi-extract-type",
  "version": "1.0.0",
  "description": "TypeScript type extraction for Joi schemas via module augmentation",
  "license": "MIT",
  "contributors": [
    "Timur Popov <timur2915@gmail.com>"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/boostpack/boostpack.git",
    "directory": "packages/shared/joi-extract-type"
  },
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.esm.js",
  "types": "./dist/index.esm.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "@boostpack/source": "./src/index.ts",
      "types": "./dist/index.esm.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs.js",
      "default": "./dist/index.esm.js"
    }
  },
  "keywords": [
    "boostpack",
    "joi",
    "typescript",
    "type-safe",
    "type-extraction",
    "module-augmentation",
    "validation"
  ],
  "files": [
    "dist",
    "!**/*.tsbuildinfo"
  ],
  "nx": {
    "tags": [
      "scope:shared"
    ]
  },
  "peerDependencies": {
    "joi": ">=17.0.0"
  }
}
